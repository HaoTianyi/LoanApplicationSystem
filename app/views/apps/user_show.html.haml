%link{:rel => "stylesheet", :href => "http://cdn.bootcss.com/twitter-bootstrap/3.0.2/css/bootstrap.min.css"}
%link{:rel => "stylesheet", :href => "http://cdn.bootcss.com/twitter-bootstrap/3.0.2/css/bootstrap-theme.min.css"}

%div{ :class => "container", :style => "-moz-user-select:-moz-none;", :onselectstart => "return false;"}
  %img{ :alt => "Logo", :src => "/assets/logo.gif", :height => '80px'}
  %h1
  
  %nav{:class => "navbar navbar-default", :role => "navigation"}
    %div{:class => "navbar-header"}
      %button{:type => "button", :class => "navbar-toggle", 'data-toggle' => "collapse", 'data-target' => "#bs-example-navbar-collapse-1"}
        %span{:class => "sr-only"}Toggle navigation
        %span{:class => "icon-bar"}
        %span{:class => "icon-bar"}
        %span{:class => "icon-bar"}
      %a{:class => "navbar-brand"} 我的申请
    %div{:class => "collapse navbar-collapse", :id => "bs-example-navbar-collapse-1"}
      %ul{:class => "nav navbar-nav"}
        - App.get_user_tags.each do |x|
          %li{:class => ((x[1] == "apps")? "active":"")}
            %a{:href => "/#{params[:ver]}/#{params[:current_user]}/#{x[1]}"}<
              =x[0]
              %span{:class => "badge pull-right"}
          %li.dropdown
            %a{:class => "dropdown-toggle", 'data-toggle' => "dropdown"}<
              填写新申请
              %b.caret
            %ul{:class => "dropdown-menu"}
              - App.get_user_new_tags.each do |x|
                %li
                  %a{:href => "/ch/#{@current_user.user_name}/#{x[1]}"}<
                    =x[0]
           
      %ul{:class => "nav navbar-nav navbar-right"}
        %li.dropdown
          %a{:class => "dropdown-toggle", 'data-toggle' => "dropdown"}< 
            设置
            %b.caret 
          %ul{:class => "dropdown-menu"}
            %li
              %a{:href => "/ch/#{@current_user.user_name}/user_management"} 账户管理
        %li
          %a{:href =>"/#{params[:ver]}/#{@current_user.user_name}/logout"} 注销

  %h1
  
  %table.table
    %thead
      %tr
        %th.thcenter{:width => "5%"} 展开
        %th.thcenter{:width => "5%"} 编号
        %th.thcenter{:width => "25%"} 申请时间
        %th.thcenter{:width => "20%"} 申请类型
        %th.thcenter{:width => "20%"} 总金额
        %th.thcenter{:width => "15%"} 处理结果
        %th.thcenter{:width => "10%"} 删除
    %tbody{:align => 'center'}
      - @apps_reim.each do |a|
        %tr{:class => "warning"}
          %td{"data-toggle" => "collapse", "data-parent" => "#accordion", :href => "#collapse#{a.id}"} +
          %td= a.id
          %td= a.created_at
          %td= Form.take_pay_methods[Form.get_app_type[a.app_type]]
          %td= a.tot_amount
          %td= Form.get_check_tags[a.check_status][0]
          %td= link_to '撤销', '/ch/'+a.created_at.to_i.to_s+'/delete'
        %tr{:id => "collapse#{a.id}", :class => "panel-collapse collapse"}
          %td
          %td{:colspan => '5'}
            %div{:class => "panel-body"}
              %table.table{:class => "table", :border => "solid 3px red"}
                %thead
                  %tr{:class => "warning"}
                    %th.thcenter{:width => "5%"} 序号
                    %th.thcenter{:width => "30%"} 内容
                    %th.thcenter{:width => "20%"} 金额
                    %th.thcenter{:width => "15%"} 报销方式
                    %th.thcenter{:width => "30%"} 帐号
                %tbody{:align => 'center'}
                  - x = 0
                  - a.apps.each do |b|
                    %tr
                      %td= x += 1
                      %td= b.details
                      %td= b.amount
                      %td= b.pay_method
                      %td= b.account_num

  = flash.each do |key, value|
    .alert{ :class => "alert-#{key}" }
      /%button.close{ :data => { :dismiss => "alert" } } 
      %strong
        = value  

