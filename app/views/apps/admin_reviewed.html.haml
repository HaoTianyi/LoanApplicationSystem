%link{:rel => "stylesheet", :href => "http://cdn.bootcss.com/twitter-bootstrap/3.0.2/css/bootstrap.min.css"}
%link{:rel => "stylesheet", :href => "http://cdn.bootcss.com/twitter-bootstrap/3.0.2/css/bootstrap-theme.min.css"}

%div.container
  = render "/user/admin_navigation", :active_bar => 'reviewed'
  %table.table{:class => "table-hover"}
    %thead
      %tr
        %th.thcenter{:width => "5%"} 展开
        %th.thcenter{:width => "5%"} 编号
        %th.thcenter{:width => "15%"} 申请人
        %th.thcenter{:width => "20%"} 申请时间
        %th.thcenter{:width => "15%"} 总金额
        %th.thcenter{:width => "15%"} 申请类型
        %th.thcenter{:width => "15%"} 审核结果
        %th.thcenter{:width => "10%"} 已领款
    %tbody{:align => 'center'}
      - @get_forms.each do |a|
        %form{:action => "/#{params[:ver]}/#{params[:current_user]}/change_to_status_4_from_3/#{a.id}"}
          %tr
            %td{"data-toggle" => "collapse", "data-parent" => "#accordion", :href => "#collapse#{a.id}"} +
            %td= a.id
            %td= a.user.realname != nil ? a.user.realname: a.user.user_name
            %td= a.created_at.strftime("%Y-%m-%d %H:%M:%S")
            %td= a.tot_amount
            %td= Form.get_app_tags[Form.get_app_type[a.app_type]][0]
            %td= '已通过审核'
            %td
              -#%button{:type => "submit", :class => "btn btn-default btn-xs"}
              
              %input{:type => "submit"}
                %span{:type => "submit", :class => "glyphicon glyphicon-ok-circle"}
          = render (a.app_type == "student"? "show_student_form" : "show_reim_or_loan_form"), :a => a, :columns => 8, :readonly => true
