            %td
              %input{:class => "noneinput", :name => "form_entry[i][:amount]"}
            %td
              %input{:class => "noneinput", :name => "form_entry[i][:pay_method]"}
    %button{:type => "submit", :class => "btn btn-default btn-sm"} 提交
  = flash.each do |key, value|
    .alert{ :class => "alert-#{key}" }
      /%button.close{ :data => { :dismiss => "alert" } } 
      %strong
        = value  

