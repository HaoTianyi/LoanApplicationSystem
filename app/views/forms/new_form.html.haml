%link{:rel => "stylesheet", :href => "http://cdn.bootcss.com/twitter-bootstrap/3.0.2/css/bootstrap.min.css"}
%link{:rel => "stylesheet", :href => "http://cdn.bootcss.com/twitter-bootstrap/3.0.2/css/bootstrap-theme.min.css"}
- language = (params[:ver] == 'ch' ? 0:1)
%div{ :class => "container"}
  = render "/user/user_navigation", :active_bar => "new_#{params[:app_type]}_form"

  %h1= params[:app_type] == "reim" ? (language == 1 ? "Reimbursement Application":"清华大学交叉信息研究院财务 报销单"):(language == 1 ? "Loan Application":"清华大学交叉信息研究院财务 借款单")
  %form{:action => "/#{params[:ver]}/#{params[:current_user]}/new_#{params[:app_type]}_form"}
    %table{:class => "table table-bordered", :align => "center"}
      %thead
        %tr
        - Form.get_reim_th.each do |x|
          %th.thcenter{:width => "#{x[2]}%"}= x[language]
      %tbody
        - for i in 1..@TOT_APPS do 
          %tr
            %td{:align => "center"}= i
            %td
              %input{:class => "noneinput", :name => "form_entry[#{i}][details]", :value => (params[:form_entry] != nil && params[:form_entry][i.to_s] != nil ? params[:form_entry][i.to_s][:details] : nil)}
            %td
              %input{:class => "noneinput-center", :name => "form_entry[#{i}][amount]", :value => (params[:form_entry] != nil && params[:form_entry][i.to_s] != nil ? params[:form_entry][i.to_s][:amount] : nil)}
            %td
              %select{:class => "form-control", :name => "form_entry[#{i}][pay_method]"}
                %option= Form.get_pay_method_tags[0][language]
                %option= Form.get_pay_method_tags[1][language]
                %option= Form.get_pay_method_tags[2][language]
                - if params[:app_type] == "reim"
                  %option= Form.get_pay_method_tags[3][language]
    %button{:type => "submit", :class => "btn btn-default btn-sm", :name => "commit"}= language == 1 ? "Submit":"提交"
    
  %strong= flash[:notice]

