%link{:rel => "stylesheet", :href => "http://cdn.bootcss.com/twitter-bootstrap/3.0.2/css/bootstrap.min.css"}
%link{:rel => "stylesheet", :href => "http://cdn.bootcss.com/twitter-bootstrap/3.0.2/css/bootstrap-theme.min.css"}

%div.container
  = render "/user/admin_navigation", :active_bar => 'edit_profile'

  %form{:action => "/#{params[:ver]}/#{params[:current_user]}/edit_profile"}
    %table
      %tbody{:align => 'right'}
        %tr
          %td= "姓名"
          %td 
            %input{:name => "realname", :value => @current_user.realname}
        %tr
          %td= "邮箱"
          %td
            %input{:name => "email", :value => @current_user.email}
        %tr
          %td= "自动通知邮箱"
          %td
            %input{:name => "nemail", :value => ActionMailer::Base.smtp_settings[:user_name]}
          %td= "(目前只支持163邮箱)"
        %tr
          %td= "邮箱密码"
          %td
            %input{:type => :password, :name => :email_password}
        %tr
          %td= "原密码"
          %td
            %input{:type => :password, :name => :password}
        %tr
          %td= "新密码"
          %td
            %input{:name => "new_password", :type => "password"}
          %td= "(若不需要修改密码，请留空)"
        %tr
          %td= "确认新密码"
          %td
            %input{:name => "verify_password", :type => "password"}
        %tr
          %td
          %td 
            %button{:class => "btn", :type => "submit", :name => 'commit'}= "保存"
          
